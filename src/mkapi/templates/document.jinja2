<div class="mkapi-document" markdown="1">
{{ doc.text|safe }}

{% for section in doc.sections -%}
{% if section.name and not section.kind -%}
<p class="mkapi-section"><span class="mkapi-section-name">{{ section.name|safe }}</span></p>
{%- endif %}
{{ section.text|safe }}
{% if section.items -%}
<ul class="mkapi-item-list" markdown="1">
{% for item in section.items -%}
<li markdown="block">
{% if item.name -%}
<span class="mkapi-item-name">{{ item.name|safe }}</span>
{%- endif -%}
{%- if item.name and item.type %} : {% endif %}
{% if item.type -%}
<span class="mkapi-item-type">{{ item.type|safe }}</span>
{%- endif -%}
{%- if item.text %}{% if item.name or item.type %} &mdash;{% endif %}
{{ item.text|safe }}
{% endif -%}
</li>
{% endfor -%}
</ul>
{% endif %}
{% endfor %}
</div>